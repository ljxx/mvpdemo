<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--首页hearder-->
    <style name="main_header_linearlayout">
        <item name="android:layout_width">@dimen/px50</item>
        <item name="android:layout_height">@dimen/px50</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_header_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/px2</item>
        <item name="android:textSize">@dimen/text_siae_10</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="main_header_image">
        <item name="android:layout_width">@dimen/px25</item>
        <item name="android:layout_height">@dimen/px25</item>
    </style>

    <!--首页title_button-->
    <style name="title_base_button">
        <item name="android:layout_width">@dimen/px50</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <!--首页RidaoGroup-->
    <style name="main_header_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="footer_bar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

    <style name="main_footer_bar_radio" parent="footer_bar">
        <item name="android:paddingTop">@dimen/px5</item>
        <item name="android:paddingBottom">@dimen/px5</item>
        <item name="android:drawablePadding">@dimen/px3</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@drawable/footer_text_color</item>
    </style>

    <style name="main_footer_bar_view">
        <item name="android:layout_width">@dimen/px0</item>
        <item name="android:layout_height">@dimen/px0</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
